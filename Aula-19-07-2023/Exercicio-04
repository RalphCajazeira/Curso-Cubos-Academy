

const palavra = 'Amandaaa';

const buscarLetra = 'a';
let contarLetrasAchadas = 0;



for (let letra of palavra) {
    if (letra === buscarLetra) {
        contarLetrasAchadas++
    }
}
// for (let letra of palavra) {
//     if (letra.toLowerCase() === buscarLetra.toLowerCase()) {
//         contarLetrasAchadas++
//     }
// }

if (contarLetrasAchadas > 0) {
    console.log(`Foram encontradas ${contarLetrasAchadas} letra ${buscarLetra}`)
} else {
    console.log(`NÃ£o foi encontrada nenhuma letra ${buscarLetra}`)
}